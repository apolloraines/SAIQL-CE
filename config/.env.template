# SAIQL Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# BASE PATHS (Auto-detected if not set)
# ============================================
# SAIQL will use these paths for data storage
# Default: ~/.saiql/ or current directory
SAIQL_HOME=
SAIQL_DATA_DIR=${SAIQL_HOME}/data
SAIQL_LOG_DIR=${SAIQL_HOME}/logs
SAIQL_CONFIG_DIR=${SAIQL_HOME}/config

# ============================================
# TOOL PATHS (Optional - auto-detected)
# ============================================
# Leave empty to use system PATH or auto-detect
# Only set if you need custom locations
SAIQL_SGREP_PATH=
SAIQL_TOOLS_DIR=

# ============================================
# DATABASE CONFIGURATION
# ============================================
# SQLite (default - no setup required)
SAIQL_DB_ENGINE=sqlite
SAIQL_SQLITE_PATH=${SAIQL_DATA_DIR}/saiql.db

# PostgreSQL (optional - for production)
SAIQL_DB_HOST=localhost
SAIQL_DB_PORT=5432
SAIQL_DB_NAME=saiql_db
SAIQL_DB_USER=saiql_user
SAIQL_DB_PASSWORD=

# ============================================
# SECURITY KEYS (Generate unique values)
# ============================================
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SAIQL_JWT_SECRET=
SAIQL_MASTER_KEY=
SAIQL_API_KEY_SALT=

# ============================================
# RUNTIME SETTINGS
# ============================================
SAIQL_DEBUG=false
SAIQL_LOG_LEVEL=INFO
SAIQL_MAX_CONNECTIONS=100

# ============================================
# API SERVER SETTINGS
# ============================================
SAIQL_API_HOST=127.0.0.1
SAIQL_API_PORT=5433
SAIQL_API_ENABLED=true

# ============================================
# SSL/TLS SETTINGS (Optional)
# ============================================
SAIQL_SSL_ENABLED=false
SAIQL_SSL_CERT=
SAIQL_SSL_KEY=
SAIQL_SSL_CA=

# ============================================
# PERFORMANCE TUNING
# ============================================
SAIQL_CACHE_SIZE_MB=512
SAIQL_QIPI_BUCKETS=512
SAIQL_BLOOM_FILTER_SIZE=10000

# ============================================
# LORETOKEN SETTINGS
# ============================================
SAIQL_LEGEND_MAP_PATH=${SAIQL_DATA_DIR}/legend_map.lore
SAIQL_LORE_STORE_PATH=${SAIQL_DATA_DIR}/lore_store.db
SAIQL_LORETOKEN_FORMAT=symbolic

