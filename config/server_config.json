{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "threaded": true,
    "max_content_length": 16777216
  },
  "cors": {
    "origins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "https://saiql.local"
    ],
    "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "allow_headers": [
      "Content-Type",
      "Authorization",
      "X-API-Key",
      "X-Request-ID",
      "X-Client-Version"
    ],
    "expose_headers": [
      "X-Rate-Limit-Remaining",
      "X-Response-Time"
    ],
    "supports_credentials": true
  },
  "security": {
    "require_auth": true,
    "rate_limit_per_minute": 100,
    "rate_limit_per_hour": 1000,
    "log_requests": true,
    "log_response_data": false,
    "hide_error_details": true,
    "enable_request_id": true,
    "trusted_proxies": [],
    "max_request_size": "16MB"
  },
  "api": {
    "version": "v1",
    "max_query_length": 10000,
    "default_timeout": 300,
    "max_timeout": 600,
    "max_batch_size": 100,
    "enable_compression": true,
    "enable_caching": true,
    "cache_ttl_seconds": 300
  },
  "authentication": {
    "jwt": {
      "algorithm": "HS256",
      "expiry_hours": 24,
      "refresh_expiry_days": 30,
      "issuer": "SAIQL-Bravo"
    },
    "api_keys": {
      "default_expiry_days": 365,
      "max_keys_per_user": 10,
      "key_length": 32
    },
    "rate_limiting": {
      "requests_per_minute": 100,
      "requests_per_hour": 1000,
      "burst_limit": 10,
      "enable_per_user": true,
      "enable_per_ip": true
    }
  }
}